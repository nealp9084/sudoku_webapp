<h1>Sudoku Solution</h1>

<div class="row-fluid">
  <div class="span6">
    <h2>Your Puzzle</h2>
    <textarea class="input-block-level" readonly rows="<%= @puzzle.split("\n").size %>"><%= @puzzle %></textarea>
  </div>

  <div class="span6">
    <h2>The Solution</h2>
    <% if @solution %>
      <textarea class="input-block-level" disabled="true" readonly rows="<%= @puzzle.split("\n").size %>"><%= @solution %></textarea>
    <% else %>
      <p class="text-error">The puzzle is invalid or has no solutions!</p>
    <% end %>
  </div>
</div>

<div class="row-fluid">
  <div class="span6">
    <%= link_to "Solve another puzzle!", :root, class: 'btn btn-primary' %>
  </div>

  <div class="span6">
    <p class="muted"><small><em>Generated this solution in <%= @performance %> ms, including Ruby overhead.</em></small></p>
  </div>
</div>
